@{
    ViewBag.Title = "Clientes";

}
<div class="panel panel-primary">
    <div class="panel-heading" style="font-size:16px">
        @ViewBag.Title

    </div>
    <div class="panel-body">
        <div class="row">
            <a class="btn btn-primary pull-right" href="@Url.Action("Crud", "Cliente", new { id = 0 })" style="margin-right:15px;"><span class="glyphicon glyphicon-plus"></span> Nuevo</a>
        </div>
        <div class="row">
            <div id="contenidoCliente">
                <div class="table-responsive">
                    <table id="tableCliente" class="table table-stripped" width="100%"
                           data-filtering="true"
                           data-filter="#filter" data-paging="true">
                        <thead>
                            <tr>
                                <th>NumeroIdentificacion</th>
                                <th>Nombre</th>
                                <th>ApellidoP</th>
                                <th>ApellidoM</th>
                                <th></th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @item.NumeroIdentificacion
                                    </td>
                                    <td>@item.Nombre</td>
                                    <td>@item.ApellidoP</td>
                                    <td>@item.ApellidoM </td>
                                    <td>
                                        <a class="btn btn-xs btn-primary " href="@Url.Action("Crud", "Cliente", new { id = item.Id })">
                                            <span class="glyphicon glyphicon-pencil"></span>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>
