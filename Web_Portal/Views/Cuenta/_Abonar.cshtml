@using Solucion.prueba.Dtos
@model MovimientoDto
@using (Html.BeginForm("Abonar","Cuenta"))
{
    @Html.HiddenFor(x => x.CuentaId)
    @Html.LabelFor(model => model.TipoMovimientoId, "Tipo de movimiento", htmlAttributes: new { @class = "control-label col-md-1" })
    <div class="col-md-2">
        @Html.DropDownListFor(model => model.TipoMovimientoId, (SelectList)ViewBag.TipoMovimientos, "--Seleccionar--", htmlAttributes: new { @class = "form-control mi-selector" })
    </div>
    @Html.LabelFor(model => model.Monto, "Monto", htmlAttributes: new { @class = "control-label col-md-1" })
    <div class="col-md-2">
        @Html.TextBoxFor(x => x.Monto, new { @class = "form-control", autocomplete = "off" })
        @Html.ValidationMessageFor(x => x.Monto, "", new { @class = "text-danger" })
    </div>
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary pull-right" style="margin-right:10px;" id="Abonar"><i class=""></i>Abonar</button>

    </div>
}